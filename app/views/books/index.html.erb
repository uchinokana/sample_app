
<h1>Books</h1>

<table>
  <tr>
    <th>
      Title
    </th>
    <th>Body</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <th>
        <%= book.title %>
      </th>
      <th>
        <%= book.body %>
      </th>
      <th>
        <%= link_to "show", book_path(book.id) %>
      </th>
      <th>
        <%= link_to "edit", edit_book_path(book.id) %>
      </th>
      <th>
        <%= link_to "Destroy", book_path(book.id) , method: :delete, "data-confirm" => "本当に削除しますか？" %>
      </th>
    </tr>
  <%end%>
</table>

<h1>New Book</h1>

<%= form_with model:@book, local:true do |f| %>

